/*@import url('nature.css');*/
@import url('bootstrap.min.css');

/* Code sections */
pre {
  margin-top: 0px;
  margin-bottom: 0px;
}
/* Note sections
 * .. note::
 */
div.note {
  /* background-color: #FFE6E6; */
}
div.note p.admonition-title {
  display: none;
}
div.note p:before {
  font-style: italic;
  content: 'Note: ';
  /* margin-right: 10px; */
}
div.note p {
  /* http://alistapart.com/article/howtosizetextincss */
  font-size: 0.9em; /* 0.9 times the font size of normal text */
  /* display: inline; */
  margin-left: 20px;
  margin-right: 20px;
  /* padding-left: 10px; */
  padding: 6px;
  background-color: #FFE6E6;
  color: #666;
  border-radius: 8px;
}

/* Navigation */
div.sphinxsidebar {
  /* background-color: white; */
  position: fixed;
  /* left: 40px; */
  left: 5%;
  top: 120px;

  width: 150px;

  padding-top: 20px;

  font-size: 12px;
}

div.sphinxsidebar h3 {
  font-weight: 400;
  line-height: 1em;
  /* font-size: 21px; */
  font-size: 15px;
  /* color: rgb(90, 90, 90); */

  margin-top: 0px;
  /* margin-bottom: 0px; */
  margin-bottom: 1em;
}

div.sphinxsidebar input {
  width: auto;
}

div.sphinxsidebar a {
  /* color: #81B3CC; */
}

div.sphinxsidebar li.current > a {
  font-weight: bold;
}
div.sphinxsidebar a.current {
  font-weight: bold;
}

div.sphinxsidebar h4 {
  color: rgb(90, 90, 90);

  font-weight: bold;
  font-size: 12px;

  margin-top: 0px;
  margin-bottom: 0px;
}

div.related, div.footer {
  display: none;
}

a.headerlink {
  display: none;
}
h1:hover a.headerlink, h2:hover a.headerlink {
  display: inline;
}

div.toctree-wrapper li {
  line-height: 23px;
  font-weight: bold;
}

div.toctree-wrapper ul li ul li {
  font-weight: normal;
}

div.toctree-wrapper ul {
  margin-bottom: 0.5em;
}

div.document {
  margin: 0;
  padding-top: 0;
}

div#body div.section {
  padding-bottom: 15px;
  margin-bottom: 30px;

  border-bottom: 1px solid #CCC;
}

div#main-column {
  position: relative;
  margin: 0 auto;
  max-width: 700px;

  padding-top: 120px;
}

div#main-column > h3 {
  float: right;
  line-height: 1em;
}

div#logo {
  /* float: right; */
  position: absolute;
  top: 0;
  right: 0;
}

div.nav-buttons {
  display: table;
  width: 100%;

  margin-top: 2.5em;
}
div.nav-buttons div.button-row {
  display: table-row;
}

div.nav-buttons div.button-row div {
  display: table-cell;
  text-align: center;
  font-size: 12px;

  width: 33.3%;
}

div#main-column h1 {
  /*font-size: 60px;*/
  /*font-weight: 100;*/
  font-size: 50px;
  font-weight: 100;
  line-height: 1;
  letter-spacing: -1px;
  margin-bottom: 0.5em;
  color: black;
}

div#main-column h2 {
  font-size: 40px;
  font-weight: 100;
  line-height: 1;
  margin-top: 1em;
  margin-bottom: 0.5em;
  /*letter-spacing: -1px;*/
  /*text-decoration: underline;*/
}

div#main-column p {
  margin-top: 1em;
  margin-bottom: 1em;
}

div#main-column div.highlight {
  margin-top: 1em;
  margin-bottom: 1em;
}

table.docutils {
  /* border: 0 none rgba(0,0,0,0); */
  border-width: 0;
}

table.docutils td {
  border-width: 0;
  font-size: 12px;
  padding-right: 5px;
}

table.docutils th {
  border-width: 0;
  text-align: left;
  font-size: 12px;
}

table.docutils tr:first-of-type th[colspan] {
  border-bottom: 1px solid black;
  font-size: 15px;
  font-weight: normal;
}

